  "assessmentItems": {
    "wordRecognition": {
      "description": "Show word, child identifies from options or points to correct picture",
      "instructions": "Display the target word and 3-4 options. Child selects the matching picture or spoken word.",
      "example": {
        "targetWord": "cat",
        "options": ["cat_image", "dog_image", "hat_image", "bat_image"],
        "correctIndex": 0
      }
    },
    "pictureWordMatch": {
      "description": "Show picture, child identifies written word",
      "instructions": "Display a picture and 3-4 written words. Child selects the word that matches the picture.",
      "example": {
        "picture": "dog_image",
        "options": ["cat", "dog", "log", "fog"],
        "correctIndex": 1
      }
    },
    "missingWord": {
      "description": "Sentence with blank, child fills in",
      "instructions": "Read sentence with missing word. Child selects the word that completes it correctly.",
      "example": {
        "sentence": "The cat sat on the ___.",
        "options": ["mat", "blue", "run", "the"],
        "correctIndex": 0
      }
    },
    "sentenceReading": {
      "description": "Child reads sentence, answers comprehension question",
      "instructions": "Child reads or listens to sentence, then answers a simple question about it.",
      "example": {
        "sentence": "The big dog ran to the park.",
        "question": "Where did the dog go?",
        "options": ["the park", "the house", "the store"],
        "correctIndex": 0
      }
    }
  },
  "adaptiveLogic": {
    "description": "Rules for adaptive assessment progression",
    "startLevel": "pre_reader",
    "questionsPerLevel": 10,
    "advanceThreshold": 0.8,
    "stayThreshold": 0.6,
    "ceilingThreshold": 0.5,
    "rules": [
      "Start at pre_reader level",
      "If accuracy >= 80%, advance to next level",
      "If accuracy 50-79%, continue at current level with more questions",
      "If accuracy < 50%, ceiling reached - stop assessment",
      "Maximum 3 levels can be assessed per session",
      "Always celebrate effort regardless of score"
    ]
  }
